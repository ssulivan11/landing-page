{
  "name": "homepage-svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "start": "sirv public",
    "format": "pretty-quick --write .",
    "lint": "eslint . --ext .js,.svelte",
    "test": "jest src",
    "test:watch": "jest src --watch --coverage"
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "yarn lint --fix",
      "pretty-quick --staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^26.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-transform-svelte": "^2.1.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.12.1",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^6.1.0",
    "svelte": "^3.23.0"
  },
  "dependencies": {
    "eslint": "^7.1.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "sirv-cli": "^0.4.4"
  }
}